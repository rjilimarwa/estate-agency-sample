{% extends 'administration/base.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Simple Tables
                <small>preview of simple tables</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Tables</a></li>
                <li class="active">Simple</li>
            </ol>
        </section>

        <section class="content">
            <div class="col-md-4">
                <form action="{{ path('ville_chercher') }}" method="get">
                    <div class="form-group">
                        <label>Nom ville</label>
                        <input type="text" name="nom" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary"><span class="fa fa-loop"></span> Chercher
                    </button>
                </form>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Bordered Table</h3>
                            <div class="box-body">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ville in villes %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('ville_show', { 'id': ville.id }) }}">{{ ville.id }}</a>
                                            </td>
                                            <td>{{ ville.name }}</td>
                                            <td>
                                                <ul>
                                                    <li>
                                                        <a href="{{ path('ville_show', { 'id': ville.id }) }}">show</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('ville_edit', { 'id': ville.id }) }}">edit</a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                                <ul>
                                    <li>
                                        <a href="{{ path('ville_new') }}">Create a new ville</a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}
