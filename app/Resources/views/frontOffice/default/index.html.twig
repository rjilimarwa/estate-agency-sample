{% extends 'frontOffice/base.html.twig' %}
{% block body %}


    <div class="banner text-center">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="{{ asset('frontOffice/img/banner/banner-slider-1.jpg') }}" alt="banner-slider-1">
                    <div class="container">
                        <div class="carousel-caption banner-slider-inner banner-top-align">
                            <div>
                                <h1 data-animation="animated fadeInDown delay-05s"><span>Welcome to</span> Real House
                                </h1>
                                <p data-animation="animated fadeInUp delay-05s">Lorem ipsum dolor sit amet, consectetuer
                                    adipiscing nonummy nibh euismod tincidunt ut… </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ asset('frontOffice/img/banner/banner-slider-2.jpg') }}" alt="banner-slider-2">
                    <div class="carousel-caption banner-slider-inner banner-top-align">
                        <div>
                            <h1 data-animation="animated fadeInDown delay-05s"><span>Find your </span> Dream House</h1>
                            <p data-animation="animated fadeInUp delay-05s">Lorem ipsum dolor sit amet, conconsectetuer
                                adipiscing elit, sed diam nonummy nibh euismod tincidunt ut…</p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="{{ asset('frontOffice/img/banner/banner-slider-2.jpg') }}" alt="banner-slider-2">
                    <div class="carousel-caption banner-slider-inner banner-top-align">
                        <div>
                            <h1 data-animation="animated fadeInDown delay-05s"><span>Find your </span> Dream House</h1>
                            <p data-animation="animated fadeInUp delay-05s">Lorem ipsum dolor sit amet, consectetuer
                                adinibh euismod tincidunt ut…</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="slider-mover-left" aria-hidden="true">
                <img src="{{ asset('frontOffice/img/chevron-left.png') }}" alt="chevron-left">
            </span>
                <span class="sr-only">Previous</span>
            </a>

            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="slider-mover-right" aria-hidden="true">
                <img src="{{ asset('frontOffice/img/chevron-right.png') }}" alt="chevron-right">
            </span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="search-area hidden-xs">
            <div class="search-area-inner">
                <div class="search-contents show-search-area animated fadeInUp">
                    <div class="row">
                        {{ render(controller('AppBundle:FrontOffice/FrontOfficeDefault:formSearch')) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>


    <div class="recent-properties">
        <div class="container">
            <!-- Main title -->
            <div class="main-title">
                <h1>Derniers biens</h1>
                <div class="border">
                    <div class="border-inner"></div>
                </div>
            </div>

            <div class="row">
                {% for entity in entities %}
                    <div class="col-lg-4 col-md-4 col-sm-6 wow fadeInUp delay-03s">
                        <!-- Recent properties box start -->
                        <div class="thumbnail recent-properties-box">
                            <a href="{{ path('front_property_show', {'slug': entity.slug}) }}">
                                <img src="{{ asset(entity.image.webPath) }}" class="img-responsive"
                                     style="height: 230px;">
                            </a>
                            <!-- Detail -->
                            <div class="caption detail">
                                <!-- Header -->
                                <header>
                                    <div class="pull-left">
                                        <h1 class="title">
                                            {{ entity.title }}
                                        </h1>
                                    </div>
                                    <!-- Price -->
                                    <div class="price">
                                        {{ entity.price }} DT
                                    </div>
                                </header>
                                <!-- Location -->
                                <h3 class="location">
                                    <a href="#">

                                    </a>
                                </h3>
                                <!-- Facilities List -->
                                <ul class="facilities-list clearfix">
                                    <li class="bordered-right">
                                        <i class="flaticon-square-layouting-with-black-square-in-east-area"></i>
                                        <span>4800 sq ft</span>
                                    </li>
                                    <li>
                                        <span class="glyphicon glyphicon-th-large"></span>Surface:{{ entity.area }}

                                    </li>
                                    <li>
                                        <i class="fa fa-bed" aria-hidden="true"></i> Nb
                                        chambres: {{ entity.roomNumber }}

                                    </li>
                                    <li>
                                        <i class="fa fa-map"></i>Lieu: {{ entity.ville.name }}

                                    </li>
                                    <li>
                                        <i class="flaticon-vehicle"></i>Categorie :{{ entity.category.name }}

                                    </li>
                                    <li>
                                        <i class="fa fa-calendar-o"></i> Ajouté le: {{ entity.createdAt|date("d-m-Y") }}

                                    </li>
                                </ul>
                                <!-- Footer -->
                                <div class="footer">
                                    <a href="#">

                                    </a>
                                    <span>

                                </span>
                                </div>
                            </div>
                            <!-- Tag -->
                            <span class="tag-f">
                            <a href="{{ path('front_property_show', {'slug': entity.slug}) }}">details</a>
                        </span>
                            <span class="tag-s">
                            <a href="{{ path('front_property_show', {'slug': entity.slug}) }}"> {{ entity.operation }}</a>
                    </span>
                        </div>
                        <!-- Recent properties box end -->
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}