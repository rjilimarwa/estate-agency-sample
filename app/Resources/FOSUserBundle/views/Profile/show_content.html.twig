{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <p>
        <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-sm btn-info"><i class="fa fa-pencil"></i> Modifier</a>

        <a href="{{ path('fos_user_change_password') }}" class="btn btn-sm btn-danger pull-right"><i class="fa fa-key"></i> Changer mot de passe</a>
    </p>
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>Date inscription: {{ app.user.createdAt|date('d/m/Y à H:i') }}</p>
    <p> Dernier connexion : {{ app.user.lastLogin|date('d/m/Y à H:i') }}</p>
</div>
